<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true">
        <ripple android:color="@color/app_backgroundSecondary">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#3C83FC" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
        </ripple>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/app_colorPrimaryLight" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/app_colorPrimaryDark" />
            <corners android:radius="4dp" />
        </shape>
    </item>

</selector>